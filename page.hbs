{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}


<div class="container">
  <div class="col-md-2 col-xs-0"></div>
  <div class="col-md-8 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <b>Collection of: {{title}}</b>
      </div>
      <div class="panel-body">
        <div class="col-md-4" >
          <ul class="list-group">
            
            {{#foreach tags}}
            <a href="/tag/{{slug}}">            
            <li class="list-group-item lius-page-card" style="background:url('{{image}}') no-repeat center">
              <span class="badge">
                {{#get "tags"  filter="slug:{{slug}}"}}
                  {{#foreach tags}}
                    {{../pagination.total}} 
                  {{/foreach}}
                {{/get}}
              </span>
              <h2 class="inner">{{name}}</h2>
            </li>
            </a>            
            {{/foreach}}
          </ul>
        </div>
          
        <div class="col-md-8">
          <ul class="list-group">
            
            {{#foreach tags}}
            <a href="/tag/{{slug}}">
              <li class="list-group-item lius-page-card" >
                <p class="inner">{{description}}</p>
              </li>
            </a>
            {{/foreach}}
          </ul>
        </div>        
      </div>
      

    </div>
  </div>
  <div class="col-md-2 col-xs-0"></div>
  

</div>

<main class="content" role="main">
    <article class="{{post_class}}">


        <section class="post-content">
            {{content}}
        </section>

    </article>
</main>

   



  

  
{{/post}}
