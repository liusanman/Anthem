{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

{{!-- The main content area on the homepage --}}



{{!-- The main content area --}}
<main id="site-main" class="container site-main" role="main">

  {{!-- Panels displayed here. Each panel is linked the a static page named 'index1-5' --}}
    <div class="blog-masonry masonry-true" >
        <div class="row">

    {{#get "pages" order="title asc"}}

    {{#foreach pages}}
        <div class="post-masonry anthem-index-card col-md-4 col-sm-6">
          <div class="post-thumb">
            <a href="{{url}}">
              <img src="{{img_url feature_image}}" alt="">
              <div class="title-over">
                <h2>{{title}}</h2>
              </div>
              <div class="post-hover text-center">
                <div class="inside">
                  <h3>{{title}}</h3>
                  {{content}}
                </div>
              </div>
            </a>
          </div>
        </div>
    {{/foreach}}
    {{else}}
      <p class="error">{{error}}</p>
    {{/get}}
    </div>
  </div>
  <div class="post-feed">
  {{#get "posts"  include="authors,tags" filter="featured:true" }}
  {{#foreach posts}}
    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    {{> "post-card"}}
  {{/foreach}}
  {{else}}
      <p class="error">{{error}}</p>
  {{/get}}
  </div>
</main>
