{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

{{!-- The main content area on the homepage --}}



<div class="container" id="test">
  {{!-- Panels displayed here. Each panel is linked the a static page named 'index1-5' --}}
  
  
  {{#get "posts" filter="page:true" order="title asc" as |pages pagination|}}
    {{#foreach pages}}
      {{#if @odd}}
        <div class="row">
      {{/if}}
          <div class="col-md-6">
              <div class="panel panel-default">
                <div class="panel-body anthem-index-card" style="background:url({{img_url feature_image}}) no-repeat">
                  <h4>{{excerpt}}</h4>
                </div>
            <a href="{{url}}">
                
                <div class="panel-footer">
                  <H3>{{title}}</H3>
                  <p></p>
                </div>
              </div>
            </a>
          </div>
      {{#if @even}}
        </div>
      {{else}}
        {{#if @last}}
          </div>
        {{/if}}
      {{/if}}
    {{/foreach}}
  {{/get}}

<main id="content" class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main> 
